<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-9">
            <div class="d-grid gap-2">
                <button class="btn btn-success" type="button" id="toggle-btnAdd">Agregar Producto - Mostrar Formulario</button>
            </div>
            <div id="formAddProductConteiner">
                <h2>Agregar Producto</h2>
                <form id="addProductForm">
                    <div class="row">
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Titulo del producto</label>
                            <input type="text" class="form-control" id="titleProduct" placeholder="Titulo del producto" required>
                        </div>
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Descripcion del producto</label>
                            <input type="text" class="form-control" id="descriptionProduct" placeholder="Descripcion del producto" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Codigo del producto</label>
                            <input type="text" class="form-control" id="codeProduct" placeholder="Codigo del producto" required>
                        </div>
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Precio del producto</label>
                            <input type="number" step="0.01" class="form-control" id="priceProduct" placeholder="Precio del producto" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Stock del producto</label>
                            <input type="number" class="form-control" id="stockProduct" placeholder="Stock del producto" required>
                        </div>
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Categoria del producto</label>
                            <input type="text" class="form-control" id="categoryProduct" placeholder="Categoria del producto" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label">Imagenes de produto</label>
                        <input class="form-control" type="file" id="FileImg" multiple>
                    </div>
                    <button type="submit" class="btn btn-primary btnSubmitForm">Agregar</button>
                </form>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="button" id="toggle-btnUpdate">Editar Producto - Mostrar Formulario</button>
            </div>
            <div id="formUpdateProductConteiner">
                <h2>Editar Producto</h2>
                <form id="updateProductForm">
                    <div class="mb-3">
                        <label for="inputEmail4" class="form-label">ID del producto a modificar</label>
                        <input type="text" class="form-control" id="idProductEdit" placeholder="ID del producto" required>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Titulo del producto</label>
                            <input type="text" class="form-control" id="titleProductEdit" placeholder="Titulo del producto" required>
                        </div>
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Descripcion del producto</label>
                            <input type="text" class="form-control" id="descriptionProductEdit" placeholder="Descripcion del producto" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Codigo del producto</label>
                            <input type="text" class="form-control" id="codeProductEdit" placeholder="Codigo del producto" required>
                        </div>
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Precio del producto</label>
                            <input type="number" class="form-control" id="priceProductEdit" placeholder="Precio del producto" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Stock del producto</label>
                            <input type="number" class="form-control" id="stockProductEdit" placeholder="Stock del producto" required>
                        </div>
                        <div class="col">
                            <label for="inputEmail4" class="form-label">Categoria del producto</label>
                            <input type="text" class="form-control" id="categoryProductEdit" placeholder="Categoria del producto" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btnSubmitForm">Editar</button>
                </form>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-warning" type="button" id="toggle-btnDel">Eliminar Producto - Mostrar Formulario</button>
            </div>
            <div id="formDelProductConteiner">
                <h2>Eliminar Producto</h2>
                <form id="deleteProductForm">
                    <div class="mb-3">
                        <label for="inputEmail4" class="form-label">ID del producto a eliminar</label>
                        <input type="text" class="form-control" id="productId" placeholder="ID del producto" required>
                    </div>
                    <button type="submit" class="btn btn-primary btnSubmitForm">Eliminar</button>
                </form>
            </div>
            
            <h1 class="my-4">Lista de Productos</h1>
            <div class="row listProducts">
                {{#each products}}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="/{{thumbnails.[0]}}" class="card-img" alt="{{title}}">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{title}}</h5>
                                    <p class="card-text">{{description}}</p>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Código: {{code}}</li>
                                        <li class="list-group-item">Precio: ${{price}}</li>
                                        <li class="list-group-item">Stock: {{stock}}</li>
                                        <li class="list-group-item">Categoría: {{category}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="chat-panel">
                <div class="chat-header">
                    Chat
                </div>
                <div class="chat-body">

                </div>
                <div class="chat-footer">
                    <div class="d-grid gap-2">
                        <button class="btn btn-success" type="button" id="btnLogin">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="js/chat.js"></script>
<script src="/js/realTimeProducts.js"></script>
